		 		consumedActionPoints="0"
				consumedMovement="0"
				cooldown="3"
				requiredActionPoints="0"
				requiredMovement="0">
			<model>
				<cast casterBlueprint="Effects/Radar"
						responseSound="Responses/Units/OutriderRecon"
						sound="Actions/Recon"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affect="Tile" radius="3">
							<modifiers>
								<modifier>
									<effects>
										<reveal/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
			<scoreModifiers>
				<modifier>
					<effects>
						<score add="1.0"/>
					</effects>
				</modifier>
			</scoreModifiers>
		</unitCast>
		<unitAction name="Minelayer"
		 		consumedActionPoints="0"
				consumedMovement="0"
				cooldown="5"
				requiredUpgrade="Minelayer"
				requiredActionPoints="0"
				requiredMovement="0">
			<model>
				<action animation="Units/OutriderAbility0"
						responseSound="Responses/Units/OutriderMinelayer"
						sound="Units/OutriderMinelayer"
						soundCount="1"/>
			</model>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affect="Tile">
							<modifiers>
								<modifier>
									<effects>
										<addFeature type="Mines"/>
									</effects>
								</modifier>
							</modifiers>
							<scoreModifiers>
								<modifier>
									<conditions>
										<tile>
											<enemyStrengthInTheArea greater="0"/>
										</tile>
									</conditions>
									<effects>
										<score add="0.5"/>
									</effects>
								</modifier>
							</scoreModifiers>			
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</unitAction>
	</actions>
	<traits>
		<trait type="Large"/>
		<trait type="Mechanical"/>
		<trait type="Transport"/>
		<trait type="MilitaryBackgroundUpgrade" requiredUpgrade="MilitaryBackgroundUpgrade"/>
	</traits>
</unit>
