				material="Units/Outrider"
				mesh="Units/Outrider"
				scale="25 25 25"/>
	</model>
	<weapons>
		<weapon type="HeavyMachineGun">
			<models>
				<projectileWeapon muzzleBone="Muzzle"/>
			</models>
		</weapon>
		<weapon type="None" requiredUpgrade="Minelayer">
			<models>
				<weapon animationSuffix="Minelayer"
						mesh="Units/OutriderMinelayer"
						material="Units/OutriderMinelayer"/>
			</models>
		</weapon>		
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<actWhileCapturable base="1"/>
				<armor base="6"/>
				<cargoSlots base="1"/>
				<groupSizeMax base="1"/>
				<hitpointsMax base="24"/> <!-- %hitpointsMax base tier=8 -->
				<mineralsCost base="30"/> <!-- %mineralsCost base tier=5 factor=1 -->
				<mineralsUpkeep base="1.5"/> <!-- %mineralsUpkeep base tier=5 factor=1 -->
				<moraleMax base="8"/>
				<movementMax base="5"/>
				<productionCost base="30.0"/> <!-- %productionCost base tier=5 factor=1 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
				<increaseHumanScore base="0.5"/>
				<increaseVehiclesScore base="0.5"/>
			</effects>
		</modifier>
	</strategyModifiers>	
	<actions>
		<appear>
			<model>
				<action responseSound="Responses/Units/OutriderAppear"/>
			</model>
		</appear>
		<attack>
			<model>
				<attack animation="Units/OutriderAttack"
						beginFire="1.0"
						endFire="2.3"
						responseSound="Responses/Units/OutriderAttack"
						responseSoundCount="3"/>
			</model>		
		</attack>
		<die>
			<model>
				<die animation="Units/OutriderDie0"
						sound="Units/OutriderDie"/>
			</model>
		</die>
		<endure>
			<model>
				<action animation="Units/OutriderImpact"
						responseSound="Responses/Units/OutriderEndureHighDamage"/> 
			</model>
		</endure>
		<holdPosition>
			<model>
				<action responseSound="Responses/Units/OutriderHoldPosition"/>
			</model>
		</holdPosition>
		<holdPositionUntilHealed>
			<model>
				<action responseSound="Responses/Units/OutriderHoldPosition"/>
			</model>
		</holdPositionUntilHealed>
		<idle>
			<model>
				<idle animation="Units/OutriderIdle"
						animationCount="3"/>
			</model>
		</idle>
		<kill>
			<model>
				<action responseSound="Responses/Units/OutriderKill"/>
			</model>
		</kill>
		<move>
			<model>
				<action animation="Units/OutriderMove"
						responseSound="Responses/Units/OutriderMove"
						responseSoundCount="3"
						sound="Units/OutriderMove"
						soundCount="1"
						soundFadeInDuration="0.25"
						soundFadeOutDuration="0.25"/>
			</model>
		</move>
		<poke>
			<model>
				<action responseSound="Responses/Units/OutriderPoke"/>
			</model>
		</poke>
		<select>
			<model>
				<action responseSound="Responses/Units/OutriderSelect"
						responseSoundCount="3"/>
			</model>
		</select>
		<skip>
			<model>
				<action responseSound="Responses/Units/OutriderHoldPosition"/>
			</model>
		</skip>
