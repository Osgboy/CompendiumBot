<?xml version="1.0" encoding="utf-8"?>
<unit branch="Human" icon="Units/Outrider" portrait="Units/Outrider">
	<model>
		<unit effectsBlueprint="Effects/Outrider"
				explosionsBlueprint="Effects/MediumHumanExplosions"
