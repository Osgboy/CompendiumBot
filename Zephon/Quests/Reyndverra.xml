<quest firstTurn="-1">
 	<conditions>
		<player>
			<faction name="HollowWarlord"/>
		</player>
	</conditions>
	<stages>
		<stage name="Intro">
			<options>
				<option name="Conquer" nextStage="AnchoriteAssault"/>
				<option name="Cajole" nextStage="AnchoriteCajole"/>
				<option name="Ignore" nextStage=""/>
			</options>
		</stage>
		<stage name="AnchoriteAssault" nextStageOnSuccess="AnchoriteAssaultSuccess">
			<modifications>
				<nearCityTileSelector count="1">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>
			</modifications>
			<objectives>
				<killCamp name="KillAnchoriteCamp">
					<boss type="AnchoriteCamp" name="Units/AnchoriteCamp" skipOverwatchOnNextTileEnter="1"/>
					<defenders>
						<unit type="AmoetiasDevourer" count="2" rankMin="0" rankMax="2" skipOverwatchOnNextTileEnter="1"/>
						<unit type="AcrinMilitia" count="1" rankMin="0" rankMax="2" skipOverwatchOnNextTileEnter="1"/>
						<unit type="AcrinZealot" count="2" rankMin="0" rankMax="2" skipOverwatchOnNextTileEnter="1"/>
					</defenders>
				</killCamp>
			</objectives>
		</stage>
		<stage name="AnchoriteCajole" nextStageOnSuccess="AnchoriteCajoleSuccess">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier visible="0">
						<effects>
							<addPlayerAction type="PayResources/CajoleAnchorite" charges="1"/>
						</effects>
					</modifier>
				</playerModifiers>	
			</modifications>
			<objectives>
				<executePlayerOrder name="ExecuteOrder"
						orderName="PayResources/CajoleAnchorite"/>
			</objectives>
		</stage>
		<stage name="AnchoriteAssaultSuccess" nextStageOnSuccess="FollowTheChieftess">
			<modifications>
				<nearCityTileSelector count="1">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>
			</modifications>
			<objectives>
				<killCamp name="KillBrynnAndForces" bossKillCompletes="0">
					<boss type="Brynn" name="Units/Brynn" token="Brynn" rankMin="5" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
					<defenders>
						<unit type="ExousiaMarauder" count="1" rankMin="0" rankMax="2" skipOverwatchOnNextTileEnter="1"/>
						<unit type="IthurielHarbinger" count="1" rankMin="4" rankMax="6" skipOverwatchOnNextTileEnter="1"/>
					</defenders>
				</killCamp>
			</objectives>
		</stage>
		<stage name="AnchoriteCajoleSuccess" nextStageOnSuccess="FollowTheChieftess">
			<modifications>
