				</killCamp>
				<keepUnitAlive token="HollowWarlord"/>
			</objectives>
		</stage>
		<stage name="FightChieftessSuccess">
			<options>
				<option name="TakeBlade" nextStage="TakeBlade"/>
				<option name="GiveUpBlade" nextStage="GiveUpBlade"/>
			</options>
		</stage>
		<stage name="FightChieftessFailure">
			<modifications>
				<unitSelector>
					<conditions>
						<unit>
							<token name="Chieftess"/>
						</unit>
					</conditions>
				</unitSelector>
				<unitModifiers>
					<modifier>
						<effects>
							<removeUnit/>
						</effects>
					</modifier>
				</unitModifiers>
			</modifications>
		</stage>
		<stage name="TakeBlade">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
							<addItem type="Reyndverra"/>
						</effects>
					</modifier>
				</playerModifiers>	
				<playerSelector>
					<conditions>
						<player>
							<faction name="Chieftess"/>
						</player>
					</conditions>
				</playerSelector>			
				<playerModifiers>
					<modifier>
						<effects>
							<standingTier add="1"/>
						</effects>
					</modifier>
				</playerModifiers>
				<unitSelector>
					<conditions>
						<unit>
							<token name="HollowWarlord"/>
						</unit>
					</conditions>
				</unitSelector>
				<unitModifiers>
					<modifier>
						<effects>
							<removeUnit/>
						</effects>
					</modifier>
				</unitModifiers>
			</modifications>
		</stage>
		<stage name="GiveUpBlade">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
							<influence add="320"/>
							<unlockAchievement name="Reyndverra"/>
						</effects>
					</modifier>
				</playerModifiers>
				<playerSelector>
					<conditions>
						<player>
							<faction name="Chieftess"/>
						</player>
					</conditions>
				</playerSelector>			
				<playerModifiers>
					<modifier>
						<effects>
							<standingTier add="1"/>
						</effects>
					</modifier>
				</playerModifiers>
				<unitSelector>
					<conditions>
						<unit>
							<token name="HollowWarlord"/>
						</unit>
					</conditions>
				</unitSelector>
				<unitModifiers>
					<modifier>
						<effects>
							<removeUnit/>
						</effects>
					</modifier>
				</unitModifiers>
			</modifications>
		</stage>
	</stages>
</quest>
