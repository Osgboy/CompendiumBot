						<unit type="ExousiaMarauder" count="1" rankMin="0" rankMax="2" skipOverwatchOnNextTileEnter="1"/>
						<unit type="IthurielHarbinger" count="1" rankMin="4" rankMax="6" skipOverwatchOnNextTileEnter="1"/>
					</defenders>
				</killCamp>
			</objectives>
		</stage>
		<stage name="FollowTheChieftess"
				nextStageOnSuccess="FightChieftess"
				nextStageOnFailure="FollowTheChieftessFailure">
			<modifications>
				<nearCityTileSelector count="1" targetDistance="12">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
							<addUnitToPlayer type="HollowWarlord" name="Factions/HollowWarlord" token="HollowWarlord" rankMin="4" rankMax="4" skipOverwatchOnNextTileEnter="1"/>
						</effects>
					</modifier>
				</playerModifiers>
				<nearCityTileSelector count="1" targetDistance="12">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>	
			</modifications>
			<objectives>
				<visitTile name="VisitTileWithHollowWarlord">
					<unitConditions>
						<token name="HollowWarlord"/>
					</unitConditions>		
				</visitTile>
				<keepUnitAlive token="HollowWarlord"/>
			</objectives>
		</stage>
		<stage name="FollowTheChieftessFailure"/>
