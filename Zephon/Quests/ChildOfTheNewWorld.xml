<quest firstTurn="20" lastTurn="80">
	<stages>
		<stage name="Intro">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<faction name="Anchorite"/>
							<contact/>
							<notLost/>
						</player>
					</conditions>
				</playerSelector>
			</modifications>
			<options>
				<option name="TrackAugur" nextStage="TrackAugur"/>
				<option name="ContactAugur" nextStage="ContactAugur"/>
				<option name="Ignore" nextStage=""/>
			</options>
		</stage>
		<stage name="TrackAugur" nextStageOnSuccess="TrackAugurSuccess">
			<modifications>
				<nearCityTileSelector count="3" targetDistance="6">
					<conditions>
						<tile>
							<featureCategory name="SpecialResource"/> 
						</tile>
					</conditions>
				</nearCityTileSelector>
			</modifications>
			<objectives>
				<visitTile name="VisitAugur"/>
			</objectives>
		</stage>
		<stage name="TrackAugurSuccess">
			<options>
				<option name="HuntMonsters" nextStage="HuntMonsters"/>
			</options>
		</stage>
		<stage name="HuntMonsters" nextStageOnSuccess="HuntMonstersSuccess">
			<modifications>
				<nearCityTileSelector targetDistance="6">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>
			</modifications>
			<objectives>
				<killCamp name="KillAugursMonsters">
					<defenders>
						<unit type="AegyllanWorm" count="2" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
						<unit type="DarkVassael" count="2" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
						<unit type="DevoteeOfThrokos" count="2" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
					</defenders>
				</killCamp>
			</objectives>
		</stage>
		<stage name="HuntMonstersSuccess">
			<options>
				<option name="LureAugur" nextStage="LureAugur"/>
			</options>
		</stage>			
		<stage name="LureAugur" nextStageOnSuccess="SurviveAugur"
				nextStageOnFailure="LureAugurFailure">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
							<addUnitToPlayer type="Outrider" name="Units/TheJackal" token="TheJackal" skipOverwatchOnNextTileEnter="1"/>
						</effects>
					</modifier>
				</playerModifiers>
				<nearCityTileSelector>
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>	
			</modifications>
			<objectives>
				<visitTile name="VisitTileWithJackal">
					<unitConditions>
						<token name="TheJackal"/>
					</unitConditions>		
				</visitTile>
				<keepUnitAlive token="TheJackal"/>
			</objectives>
		</stage>
		<stage name="SurviveAugur" nextStageOnSuccess="SurviveAugurSuccess"
				nextStageOnFailure="LureAugurFailure">
			<modifications>
				<nearUnitTileSelector count="2" targetDistance="3">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
					<unitConditions>
						<token name="TheJackal"/>
					</unitConditions>
				</nearUnitTileSelector>			
			</modifications>
			<objectives>
				<surviveInvasion name="SurviveAugursMonsters" strength="16" waves="3">
					<attackers>
						<unit type="AegyllanWorm" rankMin="3" rankMax="5"/>
						<unit type="CrlaDisciple" rankMin="3" rankMax="5"/>
						<unit type="DarkVassael" rankMin="3" rankMax="5"/>
						<unit type="DevoteeOfThrokos" rankMin="3" rankMax="5"/>
						<unit type="SurthodaisEmbrace" rankMin="3" rankMax="5"/>
					</attackers>
				</surviveInvasion>
				<keepUnitAlive token="TheJackal"/>
			</objectives>
		</stage>
		<stage name="SurviveAugurSuccess">
			<modifications>
				<unitSelector>
					<conditions>
						<unit>
							<token name="TheJackal"/>
						</unit>
					</conditions>
				</unitSelector>
				<unitModifiers>
					<modifier>
						<effects>
							<removeUnit/>
						</effects>
					</modifier>
				</unitModifiers>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
							<addPlayerAction type="Rejuvenation"/>
						</effects>
					</modifier>
				</playerModifiers>	
			</modifications>
		</stage>
		<stage name="LureAugurFailure">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<faction name="Anchorite"/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
	 						<standingTier add="-2"/>
						</effects>
					</modifier>
				</playerModifiers>
			</modifications>
		</stage>
		<stage name="ContactAugur" nextStageOnSuccess="ContactAugurSuccess">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier visible="0">
						<effects>
							<addPlayerAction type="PayResources/ContactAugur" charges="1"/>
						</effects>
					</modifier>
				</playerModifiers>	
			</modifications>
			<objectives>
				<executePlayerOrder name="ExecuteOrder"
						orderName="PayResources/ContactAugur"/>
			</objectives>
		</stage>
		<stage name="ContactAugurSuccess">
			<options>
				<option name="AssaultAnchorite" nextStage="AssaultAnchorite"/>
			</options>
		</stage>
		<stage name="AssaultAnchorite" nextStageOnSuccess="AssaultAnchoriteSuccess">
			<modifications>
				<nearCityTileSelector>
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>	
			</modifications>
			<objectives>
				<killCamp name="KillAnchoriteCity" faction="Anchorite" city="1">
					<boss type="Headquarters" rankMin="3" rankMax="5"/>
					<defenders>
						<unit type="Abkluth" count="3" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
						<unit type="AcrinMilitia" count="6" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
						<unit type="AcrinZealot" count="6" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
						<unit type="Dreameater" count="1" rankMin="3" rankMax="5" skipOverwatchOnNextTileEnter="1"/>
					</defenders>
				</killCamp>
			</objectives>
		</stage>
		<stage name="AssaultAnchoriteSuccess">
			<options>
				<option name="LocatePassage" nextStage="LocatePassage"/>
			</options>
		</stage>
		<stage name="LocatePassage" nextStageOnSuccess="LocatePassageSuccess">
			<modifications>
				<nearCityTileSelector count="3">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>	
			</modifications>
			<objectives>
				<visitTile name="VisitPassage">
					<defenders>
						<unit type="AcrinMilitia" count="2" rankMin="3" rankMax="5"/>
						<unit type="AcrinZealot" count="1" rankMin="3" rankMax="5"/>
					</defenders>
				</visitTile>
			</objectives>
		</stage>
		<stage name="LocatePassageSuccess">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>
				<playerModifiers>
					<modifier>
						<effects>
							<dimensionalEchoes add="8"/>
						</effects>
					</modifier>
				</playerModifiers>
			</modifications>
		</stage>
	</stages>
</quest>
