<quest lastTurn="60">
	<stages>
		<stage name="Intro">
			<modifications>
				<playerSelector>
					<conditions>
						<player>
							<control/>
						</player>
					</conditions>
				</playerSelector>			
			</modifications>
			<options>
				<option name="KillHim" nextStage="KillHim"/>
				<option name="AskMystics" nextStage="AskMystics">
					<modifiers>
						<modifier>
							<effects>
								<algaeCost add="20"/>
								<researchCost add="40"/>
							</effects>
						</modifier>
					</modifiers>
				</option>
				<option name="Ignore">
					<nextStages>
						<nextStage name="IgnoreSuccess" weight="1"/>
						<nextStage name="IgnoreFailure" weight="1"/>
					</nextStages>
				</option>
			</options>
		</stage>
		<stage name="KillHim" nextStageOnSuccess="Meeting">
			<modifications>
				<nearCityTileSelector count="1" targetDistance="8">
					<conditions>
						<tile>
							<buildingSlots greater="0"/>
							<noCity/>
							<noFeature type="Bleed"/>
							<noFeatureCategory name="Cache"/>
							<noUnit/>
						</tile>
					</conditions>
				</nearCityTileSelector>				
			</modifications>
			<objectives>
				<visitTile name="VisitBanditKing"/>
			</objectives>
		</stage>
		<stage name="Meeting">
			<options>
				<option name="MeetingRetrieve" nextStage="MeetingRetrieve"/>
				<option name="MeetingLeave" nextStage="MeetingLeave"/>
			</options>	
		</stage>
		<stage name="MeetingRetrieve" nextStageOnSuccess="StoneRetrieved">
			<objectives>
				<killCamp name="KillBanditKing" bossKillCompletes="0" unleash="1">
					<boss type="BanditKing" name="Units/BanditKing" rankMin="4" rankMax="4" skipOverwatchOnNextTileEnter="1"/>
					<defenders>
						<unit type="Reaver" count="2" rankMin="2" rankMax="2" skipOverwatchOnNextTileEnter="1"/>
					</defenders>
				</killCamp>
			</objectives>
		</stage>
		<stage name="StoneRetrieved">
			<modifications>
				<playerModifiers>
					<modifier>
						<effects>
							<addItem type="PhilosophersStone"/>
						</effects>
					</modifier>
				</playerModifiers>
			</modifications>
		</stage>
		<stage name="MeetingLeave" nextStageOnSuccess="TreasureFound">
			<objectives>
				<visitTile name="VisitLootStash">
					<defenders>
						<unit type="Abkluth" count="3"/>
					</defenders>
				</visitTile>
			</objectives>
		</stage>
		<stage name="TreasureFound">
			<modifications>
				<playerModifiers>
					<modifier>
						<effects>
							<minerals add="40"/>
						</effects>
					</modifier>
				</playerModifiers>
			</modifications>
		</stage>
		<stage name="AskMystics">
			<modifications>
				<playerModifiers>
					<modifier>
						<effects>			
							<addItem type="PhilosophersStone"/>
						</effects>
					</modifier>
				</playerModifiers>
			</modifications>
		</stage>
		<stage name="IgnoreSuccess"/>
		<stage name="IgnoreFailure">
			<modifications>
				<randomCitySelector count="1">
					<conditions>
						<city>
							<control/>
						</city>
					</conditions>
				</randomCitySelector>
				<cityModifiers>
					<modifier>
						<effects>
							<population add="-1"/>
						</effects>
					</modifier>
				</cityModifiers>
			</modifications>
		</stage>
	</stages>
</quest>
