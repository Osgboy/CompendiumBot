			<modifiers>
				<modifier visible="0">
					<effects>
						<energyCost base="40"/>
						<mineralsCost base="40"/>
					</effects>
				</modifier>
			</modifiers>
		</playerAction>
		<playerAction name="PayResources/ThePulledThread"
				durationInSeconds="0.1">
			<modifiers>
				<modifier visible="0">
					<effects>
						<influenceCost base="160"/>
					</effects>
				</modifier>
			</modifiers>
		</playerAction>
		<playerAction name="PayResources/TheSpaceEngine"
				durationInSeconds="0.1">
			<modifiers>
				<modifier visible="0">
