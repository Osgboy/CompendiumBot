						<singularityCoresCost base="5"/>
					</effects>
				</modifier>
			</modifiers>
		</playerAction>
		<playerCast name="SatelliteScan">
			<model>
				<cast blueprint="Effects/SatteliteScan"
						targetsTile="1"/>
			</model>
			<beginTargets>
				<target rangeMax="-1" sighted="0">
					<areas>
						<area affect="Tile" radius="1">
							<modifiers>
								<modifier>
									<effects>
										<reveal/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
			<scoreModifiers>
				<modifier>
					<conditions>
						<targetTile>
							<enemyStrengthInTheArea greater="0"/>
							<noSighted/>
						</targetTile>
					</conditions>
					<effects>
						<score add="1.0"/>
					</effects>
				</modifier>
			</scoreModifiers>
		</playerCast>
		<playerCast name="TormentOfTheVoice" cooldown="10">
			<model>
				<cast blueprint="Effects/TormentOfTheVoice"/>
			</model>
			<beginTargets>
				<target rangeMax="-1">
					<conditions>
						<unit>
							<enemy/>
						</unit>
					</conditions>
					<areas>
						<area affect="Unit">
							<modifiers>
								<modifier>
									<effects>
										<hitpoints add="-6"/>
