									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
			</beginTargets>
			<scoreModifiers>
				<modifier>
					<conditions>
						<targetTile>
							<alliedStrengthInTheArea greater="0"/>
							<enemyStrengthInTheArea greater="0"/>
						</targetTile>
					</conditions>
					<effects>
						<score add="1.0"/>
					</effects>
				</modifier>
			</scoreModifiers>
		</playerCast>
	</actions>
</manager>
